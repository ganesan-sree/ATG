<%@ taglib uri="/dspTaglib" prefix="dsp"%>
<dsp:page>
<dsp:importbean bean="/atg/dynamo/droplet/ForEach"/>
<dsp:importbean bean="/ff/help/CountryList"/>
<dsp:importbean bean="/atg/userprofiling/Profile"/>

<option value="">Select</option>
<dsp:droplet name="ForEach">
	<dsp:param name="array" bean="CountryList.places"/>
	<dsp:oparam name="output">
		<dsp:getvalueof bean="Profile.homeAddress.country" id="country" idtype="java.lang.String">
		<dsp:getvalueof param="element.code" id="code" idtype="java.lang.String">
		<% if(country.equals(code)){%>
		<option value="<dsp:valueof param="element.code"/>" SELECTED>
		<% } 
		else{
		%>
		<option value="<dsp:valueof param="element.code"/>">
		<% } %>
		<dsp:valueof param="element.displayName"/>
		</dsp:getvalueof>
		</dsp:getvalueof>
		</option>
	</dsp:oparam>
</dsp:droplet>
</dsp:page>
